@page "/Statistic"

<head>
    <link rel="stylesheet">
</head>
<body>
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
            <a class="navbar-brand brand-logo" href="/">
                <h2 class="textlogo-h2">
                    Sixteen <em class="textlogo-em">Furnishings</em>
                </h2>
            </a>
            <a class="navbar-brand brand-logo-mini" href="/">
                <img src="admin-images/logo-mini.svg" alt="logo" />
            </a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center"
                    type="button" data-toggle="minimize">
                <span class="mdi mdi-menu"></span>
            </button>
            <div class="search-field d-none d-xl-block">
                <form class="d-flex align-items-center h-100" action="#">
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <i class="input-group-text border-0 mdi mdi-magnify"></i>
                        </div>
                        <input type="text" class="form-control bg-transparent border-0"
                               placeholder="Search products">
                    </div>
                </form>
            </div>
            <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item nav-profile dropdown">
                    <a class="nav-link dropdown-toggle" id="profileDropdown" href="#"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="nav-profile-img">
                            <img src="admin-images/admin_icon.png" alt="image" width="24" height="24">
                        </div>
                        <div class="nav-profile-text">
                            <p class="mb-1 text-black">Admin</p>
                        </div>
                    </a>
                    <div class="dropdown-menu navbar-dropdown dropdown-menu-right p-0 border-0 font-size-sm"
                         aria-labelledby="profileDropdown" data-x-placement="bottom-end">
                        <div class="p-2">
                            <a class="dropdown-item py-1 d-flex align-items-center justify-content-between"
                               href="#">
                                <span>Setting</span>
                                <i class="mdi mdi-logout ms-1"></i>
                            </a>
                        </div>
                        <div class="p-2">
                            <a class="dropdown-item py-1 d-flex align-items-center justify-content-between"
                               href="#">
                                <span>Log Out</span>
                                <i class="mdi mdi-logout ms-1"></i>
                            </a>
                        </div>
                    </div>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center"
                    type="button" data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
            </button>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <span class="icon-bg"><i class="mdi mdi-cube menu-icon"></i></span>
                        <span class="menu-title">Product management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/categorymanagement">
                        <span class="icon-bg"><i class="mdi mdi-apps menu-icon"></i></span>
                        <span class="menu-title">Category management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ordermanagement">
                        <span class="icon-bg"><i class="mdi mdi-clipboard-text menu-icon"></i></span>
                        <span class="menu-title">Order Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/statistic">
                        <span class="icon-bg">
                            <i class="mdi mdi-chart-areaspline menu-icon"></i>
                        </span>
                        <span class="menu-title">Statistic</span>
                    </a>
                </li>
                <li class="nav-item sidebar-user-actions">
                    <div class="user-details">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="d-flex align-items-center">
                                    <div class="nav-profile-img">
                                        <img src="admin-images/admin_icon.png" alt="image" width="24" height="24">
                                    </div>
                                    <div class="sidebar-profile-text" style="margin-left:12px;">
                                        <p style="margin:0;">Admin</p>
                                    </div>
                                </div>
                            </div>
                            <div class="badge badge-danger">3</div>
                        </div>
                    </div>
                </li>
                <li class="nav-item sidebar-user-actions">
                    <div class="sidebar-user-menu">
                        <a href="#" class="nav-link">
                            <i class="mdi mdi-settings menu-icon"></i>
                            <span class="menu-title">Settings</span>
                        </a>
                    </div>
                </li>
                <li class="nav-item sidebar-user-actions">
                    <div class="sidebar-user-menu">
                        <a href="#" class="nav-link">
                            <i class="mdi mdi-logout menu-icon"></i>
                            <span class="menu-title">Log Out</span>
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
            <div class="tab-content tab-transparent-content">
                <div class="tab-pane fade show active" id="business-1" role="tabpanel" aria-labelledby="business-tab">
                    <div class="row">
                        <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="mb-2 text-dark font-weight-normal">Orders</h5>
                                    <h2 class="mb-4 text-dark font-weight-bold">@TotalOrder</h2>
                                    <div class="dashboard-progress dashboard-progress-1 d-flex align-items-center justify-content-center item-parent"
                                         style="margin-top:8px">
                                        <i class="mdi mdi-lightbulb icon-md absolute-center text-dark"></i>
                                    </div>
                                    <p class="mt-4 mb-0">Show total orders</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="mb-2 text-dark font-weight-normal">Unique Visitors</h5>
                                    <h2 class="mb-4 text-dark font-weight-bold">@TotalCustomer</h2>
                                    <div class="dashboard-progress dashboard-progress-2 d-flex align-items-center justify-content-center item-parent" style="margin-top:8px"><i class="mdi mdi-account-circle icon-md absolute-center text-dark"></i></div>
                                    <p class="mt-4 mb-0">Show total customers</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3  col-lg-6 col-sm-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="mb-2 text-dark font-weight-normal">Products</h5>
                                    <h2 class="mb-4 text-dark font-weight-bold">@TotalProduct</h2>
                                    <div class="dashboard-progress dashboard-progress-4 d-flex align-items-center justify-content-center item-parent" style="margin-top:8px"><i class="mdi mdi-cube icon-md absolute-center text-dark"></i></div>
                                    <p class="mt-4 mb-0">Show total products</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h5 class="mb-2 text-dark font-weight-normal">Revenue</h5>
                                    <h2 class="mb-4 text-dark font-weight-bold">$@(TotalRevenue/100.0)</h2>
                                    <div class="dashboard-progress dashboard-progress-4 d-flex align-items-center justify-content-center item-parent" style="margin-top:8px">
                                        <i class="mdi mdi-credit-card icon-md absolute-center text-dark"></i>
                                    </div>
                                    <p class="mt-4 mb-0">Show total revenue</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="footer-inner-wraper">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between py-2">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © <a href="https://www.bootstrapdash.com/" target="_blank">bootstrapdash.com </a>2021</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Only the best <a href="https://www.bootstrapdash.com/" target="_blank"> Bootstrap dashboard </a> templates</span>
                    </div>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    
</body>

<script src="misc.js"></script>
