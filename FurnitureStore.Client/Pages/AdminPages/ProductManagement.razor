                                            <th>Variant Type</th>
                                            <th>Stock</th>
                                            <th>Grams</th>
                                            <th>Dimension</th>
                                            <th>Purchase Price</th>
                                            <th>Sale Price</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
