                                        <a class="page-link">...</a>
                                    </li>
                                }

                                int maxPageNumbersToShow = 5;
                                @for (var i = 0; i < maxPageNumbersToShow && i < pageNumberList.Count; i++)
                                {
                                    var selectedPageNum = pageNumberList[i];
                                    <li class="@((selectedPageNum == selectedPageNumber) ? "page-item active" : "page-item")"
                                        @onclick="(() => SelectPageNumber(selectedPageNum!))">
                                        <a class="page-link">@selectedPageNum</a>
                                    </li>
                                }

                                @if (pageNumberList.Count > maxPageNumbersToShow)
                                {
                                    <li class="page-item">
                                        <a class="page-link">...</a>
                                    </li>
                                }

                                <li class="page-item">
                                    <a class="page-link" @onclick="NextPage">Next</a>
                                </li>
                            }
                        </ul>
