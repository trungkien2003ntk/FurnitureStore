                                            <tr @onclick="(() => SelectProduct(product.Id!))">
                                                <td>@product.ProductId</td>
                                                <td class="product-col-2">
                                                    @product.Name
                                                </td>
                                                <td>@product.VariationDetail.Value</td>
                                                <td>@product.Stock</td>
                                                <td>@product.Grams</td>
                                                <td>@($"{product.Dimensions.Height}x{product.Dimensions.Width}x{product.Dimensions.Depth}")</td>
                                                <td>@product.PurchasePrice</td>
                                                <td>@product.SalePrice</td>
                                                @if (product.Status == "In Stock")
                                                {
                                                    <td><label class="badge badge-success">In Stock</label></td>
                                                }
                                                else if (product.Status == "Low Stock")
                                                {
                                                    <td><label class="badge badge-warning">Low Stock</label></td>
                                                }
                                                else
                                                {
                                                    <td><label class="badge badge-danger">Out of Stock</label></td>
                                                }
