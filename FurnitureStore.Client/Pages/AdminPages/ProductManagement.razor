                                                            }
                                                            <td>
                                                                <div class="d-flex gap-1">
                                                                    <button class="update-btn-product-table" @onclick="() => UpdateProduct(product.Id)">
                                                                        <span class="mdi mdi-pencil-box"></span>
                                                                    </button>
                                                                    <button class="delete-btn-product-table" @onclick="() => DeleteProduct(product.Id)">
                                                                        <span class="mdi mdi mdi-delete"></span>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                            isClicked = false;
                                        }
