        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="grid-margin stretch-card d-flex align-items-center">
                                    <div class="col-lg-3 grid-margin stretch-card d-flex align-items-center">
                                        <h4 class="card-title">Order list</h4>
                                    </div>
                                    <div class="col-lg-9 grid-margin stretch-card d-flex align-items-center justify-content-end">
                                        <h4 class="page-title">Sort by</h4>
                                        <div class="dropdown" style="margin-left: 12px;">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuOutlineButton2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> @SortByText </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuOutlineButton2">
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.Id).ToList(); StateHasChanged(); })">Order ID A-Z</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.CustomerName).ToList(); StateHasChanged(); })">Customer name A-Z</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.CreatedAt).ToList(); StateHasChanged(); })">Order date lastest</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.TotalItems).ToList(); StateHasChanged(); })">Total item A-Z</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.TotalAmount).ToList(); StateHasChanged(); })">Total amount A-Z</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.PaymentDetails.Status).ToList(); StateHasChanged(); })">Payment status A-Z</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.Status).ToList(); StateHasChanged(); })">Order status A-Z</a>
                                                <hr />
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.Id).ToList(); StateHasChanged(); })">Order ID Z-A</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.CustomerName).ToList(); StateHasChanged(); })">Customer name Z-A</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderBy(c => c.CreatedAt).ToList(); StateHasChanged(); })">Order date oldest</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.TotalItems).ToList(); StateHasChanged(); })">Total item Z-A</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.TotalAmount).ToList(); StateHasChanged(); })">Total amount Z-A</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.PaymentDetails.Status).ToList(); StateHasChanged(); })">Payment status Z-A</a>
                                                <a class="dropdown-item" @onclick="(() => { orderList = orderList.OrderByDescending(c => c.Status).ToList(); StateHasChanged(); })">Order status Z-A</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer name</th>
                                            <th>Order date</th>
                                            <th>Order address</th>
                                            <th>Total item</th>
                                            <th>Total amount</th>
                                            <th>Payment status</th>
                                            <th>Order status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in orderList)
                                        {
                                            <tr @onclick="(() => SelectOrder(item.Id!))">
                                                <td>@item.Id</td>
                                                <td>@item.CustomerName</td>
                                                <td>@item.CreatedAt</td>
                                                <td class="product-col-2">@item.ShippingInfo.Address</td>
                                                <td>@item.TotalItems</td>
                                                <td>$@(item.TotalAmount/100.0)</td>
                                                @if (@item.PaymentDetails.Status == "Paid")
                                                {
                                                    <td><label class="badge badge-success">Paid</label></td>
                                                }
                                                else if (@item.PaymentDetails.Status == "Unpaid")
                                                {
                                                    <td><label class="badge badge-warning">Unpaid</label></td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                                @if (@item.Status == "New")
                                                {
                                                    <td><label class="badge badge-warning">New</label></td>
                                                }
                                                else if (@item.Status == "Processing")
                                                {
                                                    <td><label class="badge badge-warning">Processing</label></td>
                                                }
                                                else if (@item.Status == "Shipped")
                                                {
                                                    <td><label class="badge badge-warning">Shipped</label></td>
                                                }
                                                else if (@item.Status == "Completed")
                                                {
                                                    <td><label class="badge badge-success">Completed</label></td>
                                                }
                                                else if (@item.Status == "Cancelled")
                                                {
                                                    <td><label class="badge badge-danger">Cancelled</label></td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
