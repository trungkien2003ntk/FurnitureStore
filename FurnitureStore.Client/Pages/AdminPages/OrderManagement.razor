    <div class="model" hidden="@isHiddenPopup">
        <div class="order-detail-form">
            @if(currentOrder.Id!=""){
                <div class="model_header d-flex align-items-center">
                <div class="col-lg-9">
                    <label class="model_header_title">Order detail form</label>
                </div>
                <div class="col-lg-3 d-flex justify-content-end">
                    <button class="model_close_btn_size align-self-center" @onclick="CloseOrderDetailPopup">
                        <span class="mdi mdi-close"></span>
                    </button>
                </div>
            </div>
            <div class="order-detail-header">
                <div class="d-flex">
                    <h3 style="color: black; padding-top: 10px; padding-left: 10px;">Order</h3>
                    <h3 style="color: #f33f3f; padding-top: 10px; padding-left: 10px;">#@currentOrder.Id</h3>
                </div>
                <div>
                    <h5 style="padding-left: 10px; padding-bottom: 10px;">
                        @currentOrder.CreatedAt
                    </h5>
                </div>
            </div>
            <div class="model-order-detail-overflow">
                <div class="model-order-detail-main">
                    <div class="row">
                        <h5 style="color: black;">Customer info</h5>
                        <hr>
                        <div class="row" style="margin-bottom: 12px;">
                            <div class="col-lg-6">
                                <div>
                                    <label class="model-product-name-label">Customer name</label>
                                </div>
                                <div>
                                    <label class="model_main_label">@currentOrder.CustomerName</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div>
                                    <label class="model-product-name-label">Customer Email</label>
                                </div>
                                <div>
                                    <label class="model_main_label">@currentOrder.CustomerEmail</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="model-order-detail-main">
                    <div class="row">
                        <h5 style="color: black;">Ordered item</h5>
                        <hr>
                        @foreach(var item in currentOrder.Items)
                        {
                            <div class="row" style="margin-bottom: 12px;">
                                <div class="col-lg-1">
                                    <div class="model-image-format">
                                        <img class="model_main_square"
                                             src="@GetCurrentProduct(item.ProductId).FeaturedImage" />
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <label class="model-product-name-label">
                                        Dorsey Dining Chair
                                        (black)
                                    </label>
                                    <label class="model_main_label">@GetCurrentProduct(item.ProductId).CategoryPath
                                    </label>
                                    <div class="d-flex gap-2">
                                        <label class="model-product-id-label">SKU: </label>
                                        <label class="model-product-id-label">@GetCurrentProduct(item.ProductId).Sku</label>
                                    </div>
                                </div>
                                <div class="col-lg-2 d-flex align-items-center">
                                    <label class="model-product-id-label">@Math.Round(GetCurrentProduct(item.ProductId).Grams / 1000.0, 2) Kg</label>
                                </div>
                                <div class="col-lg-2 d-flex align-items-center gap-2">
                                    <label class="model_main_label">$@(item.SellingPrice / 100.0)</label>
                                    <label class="model_main_label">x</label>
                                    <label class="model_main_label">@item.Quantity</label>
                                </div>
                                <div class="col-lg-2 d-flex align-items-center justify-content-end gap-2">
                                    <label class="model_main_label">$@(item.TotalPrice / 100.0)</label>

                                </div>
                            </div>
                        }
                        <hr />
                        <div class="row justify-content-end" style="margin-bottom: 12px;">
                            <div class="col-lg-2 d-flex align-items-center justify-content-start gap-2">
                                <label class="model_main_label">Subtotal:</label>
                            </div>
                            <div class="col-lg-2 d-flex align-items-center justify-content-end gap-2">
                                <label class="model_main_label" style="font-weight: 600;">$@(currentOrder.Subtotal/100.0)</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="model-order-detail-main">
                    <div class="row">
                        <h5 style="color: black;">Shipping info</h5>
                        <hr>
                            @if (currentOrder.ShippingInfo != null)
                            {
                                <div class="row" style="margin-bottom: 12px;">
                                    <div class="col-lg-8">
                                        <div>
                                            <label class="model-product-name-label">Shipping address</label>
                                        </div>
                                        <div>
                                            <label class="model_main_label" style="margin-top:4px;">
                                                @currentOrder.ShippingInfo.Address
                                            </label>
                                        </div>
                                        <div class="d-flex gap-2 align-items-center">
                                            <label class="model_main_label" style="margin-top:4px;">Shipping date:</label>
                                            <input type="date" @bind="currentOrder.ShippingInfo.ShippingDate" class="custom-date-picker">
                                        </div>
                                    </div>
                                    <div class="col-lg-2 d-flex align-items-center">
                                        <label class="model_main_label">Shipping price:</label>
                                    </div>
                                    <div class="col-lg-2 d-flex align-items-center justify-content-end gap-2">
                                        <label class="model_main_label" style="font-weight: 600;">$@(currentOrder.ShippingInfo.ShippingPrice / 100.0)</label>
                                    </div>
                                </div>
                            }
                    </div>
                </div>
                <div class="model-order-detail-main">
                    <div class="row">
                        <h5 style="color: black;">Order status</h5>
                        <hr>
                            <div class="d-flex" style="margin-bottom: 12px;">
                                <div>
                                    <input class="custom-radio" type="radio" name="orderStatus" id="new" checked="@(currentOrder.Status=="New")"
                                           @onchange="@(() => currentOrder.Status = "New")" />
                                    <label class="custom-radio" for="new">New</label>
                                </div>
                                <div>
                                    <input class="custom-radio" type="radio" name="orderStatus" id="processing" checked="@(currentOrder.Status == "Processing")"
                                           @onchange="@(() => currentOrder.Status = "Processing")" />
                                    <label class="custom-radio" for="processing">Processing</label>
                                </div>
                                <div>
                                    <input class="custom-radio" type="radio" name="orderStatus" id="shipped" checked="@(currentOrder.Status == "Shipped")"
                                           @onchange="@(() => currentOrder.Status = "Shipped")" />
                                    <label class="custom-radio" for="shipped">Shipped</label>
                                </div>
                                <div>
                                    <input class="custom-radio" type="radio" name="orderStatus" id="completed" checked="@(currentOrder.Status == "Completed")"
                                           @onchange="@(() => currentOrder.Status = "Completed")" />
                                    <label class="custom-radio" for="completed">Completed</label>
                                </div>
                                <div>
                                    <input class="custom-radio" type="radio" name="orderStatus" id="cancelled" checked="@(currentOrder.Status == "Cancelled")"
                                           @onchange="@(() => currentOrder.Status = "Cancelled")" />
                                    <label class="custom-radio" for="cancelled">Cancelled</label>
                                </div>

                            </div>
                    </div>
                </div>
                <div class="model-order-detail-main">
                    <div class="row">
                        <h5 style="color: black;">Payment status</h5>
                        <hr>
                        <div class="d-flex" style="margin-bottom: 12px;">
                                <div>
                                    <input class="custom-radio" type="radio" name="paymentStatus" id="unpaid" checked="@(currentOrder.PaymentDetails.Status == "Unpaid")"
                                           @onchange="@(() => currentOrder.PaymentDetails.Status = "Unpaid")" />
                                    <label class="custom-radio" for="unpaid">Unpaid</label>
                                </div>
                                <div>
                                    <input class="custom-radio" type="radio" name="paymentStatus" id="paid" checked="@(currentOrder.PaymentDetails.Status == "Paid")"
                                           @onchange="@(() => currentOrder.PaymentDetails.Status = "Paid")" />
                                    <label class="custom-radio" for="paid">Paid</label>
                                </div>

                        </div>
                    </div>
                </div>
                <div class="model-order-detail-main">
                    <div class="row">
                        <h5 style="color: black;">Total price</h5>
                        <hr>
                        <div class="row" style="margin-bottom: 12px;">
                            <div class="col-lg-10">
                                <div>
                                    <label class="model_main_label">Subtotal price:</label>
                                </div>
                                <div style="margin-top:8px;">
                                    <label class="model_main_label">Discounted price:</label>
                                </div>
                                <div style="margin-top:8px;">
                                    <label class="model_main_label">Shipping price:</label>
                                </div>
                                <div style="margin-top:8px;">
                                    <label class="model_main_label">Tax:</label>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="d-flex justify-content-end">
                                        <label class="model_main_label" style="font-weight: 600;">$@(currentOrder.Subtotal / 100.0)</label>
                                </div>
                                <div class="d-flex justify-content-end" style="margin-top:8px;">
                                    <label class="model_main_label" style="font-weight: 600;">$0</label>
                                </div>
                                    
                                    <div class="d-flex justify-content-end" style="margin-top:8px;">
                                        @if (currentOrder.ShippingInfo != null)
                                        {
                                            <label class="model_main_label" style="font-weight: 600;">$@(currentOrder.ShippingInfo.ShippingPrice / 100.0)</label>
                                        }
                                        else
                                        {
                                            <label class="model_main_label" style="font-weight: 600;">$0</label>
                                        }
                                    </div>
                                <div class="d-flex justify-content-end" style="margin-top:8px;">
                                    <label class="model_main_label" style="font-weight: 600;">$0</label>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row" style="margin-bottom: 12px;">
                            <div class="col-lg-10">
                                <div>
                                    <label class="model_main_label">Total Amount:</label>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="d-flex justify-content-end">
                                    <label class="model_main_label" style="font-weight: 600;">$@(currentOrder.TotalAmount/100.0)</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="model_main_div_children d-flex align-items-center justify-content-center gap-4">
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="SaveChanged">
                        Save
                        changed
                    </button>
                    <button type="button" class="btn btn-outline-red btn-fw">Delete order</button>
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="CancelOrderDetailPopup">Cancel</button>
                </div>
            </div>
            }
            
