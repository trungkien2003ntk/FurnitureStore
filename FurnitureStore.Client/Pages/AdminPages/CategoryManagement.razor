@page "/categorymanagement"

<PageTitle>Category Management</PageTitle>

<head>
    <link rel="stylesheet" href="css/popup.css">
</head>
<body>
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
            <a class="navbar-brand brand-logo" href="/">
                <h2 class="textlogo-h2">
                    Sixteen <em class="textlogo-em">Furnishings</em>
                </h2>
            </a>
            <a class="navbar-brand brand-logo-mini" href="/">
                <img src="admin-images/logo-mini.svg" alt="logo" />
            </a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center"
                    type="button" data-toggle="minimize">
                <span class="mdi mdi-menu"></span>
            </button>
            <div class="search-field d-flex d-xl-block align-items-center">
                <button type="button" class="btn btn-outline-dark btn-fw" style="margin-top:12px" @onclick="UpdateSelectedCategory">Update selected category</button>
                <button type="button" class="btn btn-outline-dark btn-fw" style="margin-top:12px" @onclick="DeleteSelectedCategory">Delete selected category</button>
            </div>
            <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item nav-profile dropdown">
                    <a class="nav-link dropdown-toggle" id="profileDropdown" href="#"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="nav-profile-img">
                            <img src="admin-images/admin_icon.png" alt="image" width="24" height="24">
                        </div>
                        <div class="nav-profile-text">
                            <p class="mb-1 text-black">Admin</p>
                        </div>
                    </a>
                    <div class="dropdown-menu navbar-dropdown dropdown-menu-right p-0 border-0 font-size-sm"
                         aria-labelledby="profileDropdown" data-x-placement="bottom-end">
                        <div class="p-2">
                            <a class="dropdown-item py-1 d-flex align-items-center justify-content-between"
                               href="#">
                                <span>Setting</span>
                                <i class="mdi mdi-logout ms-1"></i>
                            </a>
                        </div>
                        <div class="p-2">
                            <a class="dropdown-item py-1 d-flex align-items-center justify-content-between"
                               href="#">
                                <span>Log Out</span>
                                <i class="mdi mdi-logout ms-1"></i>
                            </a>
                        </div>
                    </div>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center"
                    type="button" data-toggle="offcanvas">
                <span class="mdi mdi-menu"></span>
            </button>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <span class="icon-bg"><i class="mdi mdi-cube menu-icon"></i></span>
                        <span class="menu-title">Product management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/categorymanagement">
                        <span class="icon-bg"><i class="mdi mdi-apps menu-icon"></i></span>
                        <span class="menu-title">Category management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ordermanagement">
                        <span class="icon-bg"><i class="mdi mdi-clipboard-text menu-icon"></i></span>
                        <span class="menu-title">Order Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/statistic">
                        <span class="icon-bg">
                            <i class="mdi mdi-chart-areaspline menu-icon"></i>
                        </span>
                        <span class="menu-title">Statistic</span>
                    </a>
                </li>
                <li class="nav-item sidebar-user-actions">
                    <div class="user-details">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="d-flex align-items-center">
                                    <div class="nav-profile-img">
                                        <img src="admin-images/admin_icon.png" alt="image" width="24" height="24">
                                    </div>
                                    <div class="sidebar-profile-text" style="margin-left:12px;">
                                        <p style="margin:0;">Admin</p>
                                    </div>
                                </div>
                            </div>
                            <div class="badge badge-danger">3</div>
                        </div>
                    </div>
                </li>
                <li class="nav-item sidebar-user-actions">
                    <div class="sidebar-user-menu">
                        <a href="#" class="nav-link">
                            <i class="mdi mdi-settings menu-icon"></i>
                            <span class="menu-title">Settings</span>
                        </a>
                    </div>
                </li>
                <li class="nav-item sidebar-user-actions">
                    <div class="sidebar-user-menu">
                        <a href="#" class="nav-link">
                            <i class="mdi mdi-logout menu-icon"></i>
                            <span class="menu-title">Log Out</span>
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-4 grid-margin stretch-card d-flex align-items-center justify-content-start">
                        <div class="dropdown" style="margin-left: 12px;">
                            <button type="button" class="btn btn-outline-dark btn-fw" @onclick="AddCategoryLV1">Add new level 1 category</button>
                        </div>
                    </div>
                    <div class="col-lg-4 grid-margin stretch-card d-flex align-items-center justify-content-start">
                        <div class="dropdown" style="margin-left: 12px;">
                            <button type="button" class="btn btn-outline-dark btn-fw" @onclick="AddCategoryLV2">Add new level 2 category</button>
                        </div>
                    </div>
                    <div class="col-lg-4 grid-margin stretch-card d-flex align-items-center justify-content-start">
                        <div class="dropdown" style="margin-left: 12px;">
                            <button type="button" class="btn btn-outline-dark btn-fw" @onclick="AddCategoryLV3">Add new level 3 category</button>
                        </div>
                    </div>
                    <div class="col-lg-4 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="grid-margin stretch-card d-flex align-items-center">
                                    <div class="col-lg-3 grid-margin stretch-card d-flex align-items-center">
                                        <h4 class="card-title">Level 1</h4>
                                    </div>
                                    <div class="col-lg-9 grid-margin stretch-card d-flex align-items-center justify-content-end">
                                        <h4 class="page-title">Sort by</h4>
                                        <div class="dropdown" style="margin-left: 12px;">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuOutlineButton2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> @SortNameCategoryLV1 </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuOutlineButton2">
                                                <a class="dropdown-item" @onclick="SortByIdCategoryLV1">ID</a>
                                                <a class="dropdown-item" @onclick="SortByNameCategoryLV1">Name</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>category ID</th>
                                            <th>category Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in categoryListLV1)
                                        {
                                            <tr @onclick="(() => SelectCategory(item.Id!))"
                                                style="@((item.Id == selectedCategoryId) ? "background-color: #f0f1f6;" : "")">
                                                <td>@item.CategoryId</td>
                                                <td class="category-col-2">@item.Text</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="grid-margin stretch-card d-flex align-items-center">
                                    <div class="col-lg-3 grid-margin stretch-card d-flex align-items-center">
                                        <h4 class="card-title">Level 2</h4>
                                    </div>
                                    <div class="col-lg-9 grid-margin stretch-card d-flex align-items-center justify-content-end">
                                        <h4 class="page-title">Sort by</h4>
                                        <div class="dropdown" style="margin-left: 12px;">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuOutlineButton2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> @SortNameCategoryLV2 </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuOutlineButton2">
                                                <a class="dropdown-item" @onclick="SortByIdCategoryLV2">ID</a>
                                                <a class="dropdown-item" @onclick="SortByNameCategoryLV2">Name</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>category ID</th>
                                            <th>category Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in categoryListLV2)
                                        {
                                            <tr @onclick="(() => SelectCategory2(item.Id!))"
                                                style="@((item.Id == selectedCategoryId2) ? "background-color: #f0f1f6;" : "")">
                                                <td>@item.CategoryId</td>
                                                <td class="category-col-2">@item.Text</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="grid-margin stretch-card d-flex align-items-center">
                                    <div class="col-lg-3 grid-margin stretch-card d-flex align-items-center">
                                        <h4 class="card-title">Level 3</h4>
                                    </div>
                                    <div class="col-lg-9 grid-margin stretch-card d-flex align-items-center justify-content-end">
                                        <h4 class="page-title">Sort by</h4>
                                        <div class="dropdown" style="margin-left: 12px;">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuOutlineButton2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> @SortNameCategoryLV3 </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuOutlineButton2">
                                                <a class="dropdown-item" @onclick="SortByIdCategoryLV3">ID</a>
                                                <a class="dropdown-item" @onclick="SortByNameCategoryLV3">Name</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>category ID</th>
                                            <th>category Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in categoryListLV3)
                                        {
                                            <tr @onclick="(() => SelectCategory3(item.Id!))"
                                                style="@((item.Id == selectedCategoryId3) ? "background-color: #f0f1f6;" : "")">
                                                <td>@item.CategoryId</td>
                                                <td class="category-col-2">@item.Text</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            <footer class="footer">
                <div class="footer-inner-wraper">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between py-2">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © <a href="https://www.bootstrapdash.com/" target="_blank">bootstrapdash.com </a>2021</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Only the best <a href="https://www.bootstrapdash.com/" target="_blank"> Bootstrap dashboard </a> templates</span>
                    </div>
                </div>
            </footer>
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <div class="model" hidden="@isHiddenPopup">
        <div class="add-category-form">
            <div class="model_header d-flex align-items-center">
                <div class="col-lg-9">
                    <label class="model_header_title">@AddUpdateCategoryForm</label>
                </div>
                <div class="col-lg-3 d-flex justify-content-end">
                    <button class="model_close_btn_size align-self-center" @onclick="CloseAddUpdateCategoryPopup">
                        <span class="mdi mdi-close"></span>
                    </button>
                </div>
            </div>
            <div class="model-category-main">
                <div class="row" style="margin-bottom: 1rem;">
                    <h3 style="text-align: center; color:black">@LevelLabel</h3>
                    <div class="model_main_div_children">
                        <label class="model_main_label" style="color: black;">Category name</label>
                        <input class="model_main_input_children" @bind="CategoryNameInput"/>
                    </div>
                </div>
                <div class="model_main_div_children d-flex align-items-center justify-content-center gap-4">
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="SaveChangeButton">
                        Save changed
                    </button>
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="CancelAddUpdateCategoryPopup">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="model" hidden="@isHiddenNotification">
        <div class="add-category-form">
            <div class="model_header d-flex align-items-center">
                <label class="model_header_title">Notification</label>
            </div>
            <div class="model-category-main">
                <div class="row" style="margin-bottom: 1rem;">
                    <div class="model_main_div_children d-flex align-content-center justify-content-center">
                        <label class="model_main_label" style="color: black;">@NotificationDetail</label>
                    </div>
                </div>
                <div class="model_main_div_children d-flex align-items-center justify-content-center gap-4">
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="CancelNotification">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="model" hidden="@isDeleteNotification">
        <div class="add-category-form">
            <div class="model_header d-flex align-items-center">
                <div class="col-lg-9">
                    <label class="model_header_title">Delete Notification</label>
                </div>
                <div class="col-lg-3 d-flex justify-content-end">
                    <button class="model_close_btn_size align-self-center" @onclick="CloseDeleteNotification">
                        <span class="mdi mdi-close"></span>
                    </button>
                </div>
            </div>
            <div class="model-category-main">
                <div class="row d-flex align-content-center justify-content-center" style="margin-bottom: 1rem;">
                    <div class="model_main_div_children d-flex align-items-center justify-content-center">
                        <label class="model_main_label" style="color: black;">Do you want to delete this category?</label>
                    </div>
                </div>
                <div class="model_main_div_children d-flex align-items-center justify-content-center gap-4">
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="YesButton">
                        Yes
                    </button>
                    <button type="button" class="btn btn-outline-red btn-fw" @onclick="NoButton">
                        No
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="misc.js"></script>
